    <RootNamespace>CNTK</RootNamespace>
    <OutDir>$(OutDirPrefix)\$(Platform)\$(Configuration)</OutDir>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <Copyright>Copyright © 2016-$([System.DateTime]::Now.ToString(`yy`))</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>Microsoft Corporation</Company>
    <Authors>Microsoft Corporation</Authors>
    <Product>Cntk.Core.Managed</Product>
    <Version>$(CntkVersionInformational)</Version>
    <PlatformTarget>x64</PlatformTarget>
    <DebugType>portable</DebugType>
     
    <PackageId>$(NugetPackagePrefix)Cntk.Core.Managed</PackageId>
    <PackageId Condition="'$(CntkComponentSuffix)'!=''">$(NugetPackagePrefix)Cntk.Core.Managed-$(CntkComponentSuffix)</PackageId>
    <repositoryUrl>https://github.com/nietras/CNTK.git</repositoryUrl>
  </PropertyGroup>
  
