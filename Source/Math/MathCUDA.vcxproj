    <ClInclude Include="GPUDataTransferer.h" />
    <ClInclude Include="GPURNGHandle.h" />
    <ClInclude Include="GPUTensor.h" />
    <ClInclude Include="latticefunctionskernels.h" />
    <ClInclude Include="Convolution.cuh" />
