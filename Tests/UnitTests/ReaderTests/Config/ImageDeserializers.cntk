RootDir = .
precision = "float"

MapFile="testMustSubstituteThis"

ImageAndImageReaderSimple_Test = [

# Parameter values for the reader
reader = [
        verbosity = 0
        randomize = true

        deserializers = (
            [
                type = "ImageDeserializer"
                module = "ImageReader"
                file = "$MapFile$"

                input = [
                    features1 = [
                        transforms = (
                            [
                                type = "Crop"
                                cropType = "Center"
                                sideRatio = 1.0
                                jitterType = "UniRatio"
                            ]:[
                                type = "Scale"
                                width = 4
                                height = 8
                                channels = 3
                                interpolations = "linear"
                            ]:[
                                type = "Mean"
                            ]:[
                                type = "Transpose"
                            ]
                        )
                    ]

                    labels1 = [
                        labelDim = 4
                    ]
                ]
            ]:[
                type = "ImageDeserializer"
                module = "ImageReader"
                file = "$RootDir$/ImageReaderSimple_map.txt"

                input = [
                    features2 = [
                        transforms = (
                            [
                                type = "Scale"
                                width = 4
                                height = 8
                                channels = 3
                                interpolations = "linear"
                            ]:[
                                type = "Mean"
                            ]:[
                                type = "Transpose"
                            ]
                        )
                    ]

                    labels2 = [
                        labelDim = 4
                    ]
                ]
            ]
        )
    ]
]

3DotsExpansionTest = {
    reader = {
        deserializers = ({
            type = "ImageDeserializer"
            module = "ImageReader"
            file = "$MapFile$"

            input = {
                features = { transforms = () }
                labels = { labelDim = 4 }               
            }
        })
    }
}

SimpleZip = {
    # Parameter values for the reader
    reader = {
        randomize = true
        deserializers = ({
            type = "ImageDeserializer" ; module = "ImageReader"
            file = "$MapFile$"

            input = {
                features = {
                    transforms (
                        { type = "Crop" ; cropType = "center"; sideRatio=1.0 ; jitterType="UniRatio" } :
                        { type = "Scale" ; width = 4 ; height = 8 ; channels = 3 ; interpolations = "linear" } :
                        { type = "Transpose" }
                    )
                }
                lables = { labelDim = 4 }
            }
        })
    }
}
