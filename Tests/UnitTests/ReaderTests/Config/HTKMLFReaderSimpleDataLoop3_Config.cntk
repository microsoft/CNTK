RootDir = .
DataDir = $RootDir$

# deviceId = -1 for CPU, >= 0 for GPU devices
deviceId = -1

precision = "float"

Simple_Test = [
    action = "write"

    reader = [
        useMersenneTwisterRand = true
        readerType = "HTKMLFReader"
        readMethod = "blockRandomize"
        miniBatchMode = "partial"
        randomize = "none"
        verbosity = 0
        frameMode = false
        truncated = true

        features = [
            dim = 363
            type = "real"
            scpFile = "$DataDir$/glob_0000.scp"
        ]
    ]
]
