RootDir = .
ModelDir = "models"
command = "Simple_Test"

precision = "float"

modelPath = "$ModelDir$/ImageReaderSimple_Model.dnn"

# deviceId = -1 for CPU, >= 0 for GPU devices
deviceId = -1

outputNodeNames = "Dummy"
traceLevel = 1
frameMode = false

Simple_Test = [

# Parameter values for the reader
reader = [
        verbosity = 0
        randomize = true

        deserializers = (
            [
                type = "CNTKTextFormatDeserializer"
                module = "CNTKTextFormatReader"
                file = "$RootDir$/ImageAndTextReaderSimple_labels.txt"

                input = [
                    labels = [
                        dim = 4
                        format = "sparse"
                    ]
                ]
            ]:[
                type = "ImageDeserializer"
                module = "ImageReader"
                file = "$RootDir$/ImageAndTextReaderSimple_map.txt"

                input = [
                    features = [
                        transforms = (
                            [
                                type = "Crop"
                                cropType = "Center"
                                sideRatio = 1.0
                                jitterType = "UniRatio"
                            ]:[
                                type = "Scale"
                                width = 4
                                height = 8
                                channels = 3
                                interpolations = "linear"
                            ]:[
                                type = "Mean"
                            ]:[
                                type = "Transpose"
                            ]
                        )
                    ]

                    # Currently the image deserializer always has labels, we read but ignore them.
                    ignored = [
                        labelDim = 4
                    ]
                ]
            ]
        )
    ]
]
