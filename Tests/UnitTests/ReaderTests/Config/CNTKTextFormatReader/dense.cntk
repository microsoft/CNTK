5x10_and_5x5_jagged = [
    precision = "double"
    reader = [
        randomize = true
        deserializers = [
            [
                type="CNTKTextFormatDeserializer"
                module="CNTKTextFormatReader"
                file="5x10_and_5x5_jagged.txt"
                input=[
                    features1 = [
                        alias = "F0"
                        dim = 10
                        format = "dense"
                    ]
                    features2 = [
                        alias = "F1"
                        dim = 5
                        format = "dense"
                    ]
                ]
            ]
        ]
    ]
]

5x10_and_5x5_jagged_composite = [
    precision = "double"
    reader = [
        randomize = true
        deserializers = [
            [
                type="CNTKTextFormatDeserializer"
                module="CNTKTextFormatReader"
                file="5x10_jagged.txt"
                input=[
                    features1 = [
                        alias = "F0"
                        dim = 10
                        format = "dense"
                    ]
                ]                
            ]:[
                type="CNTKTextFormatDeserializer"
                module="CNTKTextFormatReader"
                file="5x5_jagged.txt"
                input=[
                    features2 = [
                        alias = "F1"
                        dim = 5
                        format = "dense"
                    ]
                ]
            ]
        ]
    ]
]
