10x1_MI = [
    precision = "float"
    reader = [
        readerType = "CNTKTextFormatReader"
        # Training file contains the same sequence 
        # (with a single per-input sample from a number of feature/label inputs) 
        # repeated 10 times, 
        file = "10x1_MI_dense.txt"

        randomize = true

        chunkSizeInBytes = 50000 # ~ 1/2 input size
        keepDataInMemory = true

        input = [

             features1 = [
                alias = "F1"
                dim = 1
                format = "dense"
            ]
            features2 = [
                alias = "F2"
                dim = 10
                format = "dense"
            ]
            features3 = [
                alias = "F3"
                dim = 100
                format = "dense"
            ]
            features4 = [
                alias = "F4"
                dim = 1000
                format = "dense"
            ]
            
            labels1 = [
                alias = "L1"
                dim = 1
                format = "dense"
            ]
            labels2 = [
                alias = "L2"
                dim = 10
                format = "dense"
            ]
            labels3 = [
                alias = "L3"
                dim = 100
                format = "dense"
            ]
        ]
    ]
]


